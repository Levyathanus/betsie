---
export interface Props {
  id: string;
  text: string;
  style?: string;
  type: "button" | "reset" | "submit" | null | undefined;
  dataModalId?: string;
}
let { id, text, style, type, dataModalId } = Astro.props;
---
<button id={id} 
  type={type}
  class="bg-white hover:bg-gray-100 text-gray-800 font-semibold inline-flex items-center py-2 px-4 mr-4 border border-gray-400 rounded shadow dark:text-white dark:bg-zinc-700 dark:hover:bg-zinc-800 disabled:bg-gray-300 disabled:hover:bg-gray-300"
  data-modal-target={dataModalId}
  data-modal-show={dataModalId}
  style={style}>
    {text}
  <svg aria-hidden="true" class="w-5 h-5 ml-2 -mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
</button>